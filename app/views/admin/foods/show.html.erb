<% content_for(:title, @food.japanese_notation) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title')  %></h1>
      <div class="text-right mb-3">
        <%= link_to (t 'defaults.edit'), edit_admin_food_path(@food), class: "btn btn-success" %>
        <%= link_to (t 'defaults.delete'), admin_food_path(@food), class: "btn btn-danger", data: { confirm: t('defaults.message.delete_confirm') }, class: "btn btn-danger", data: { confirm: t('defaults.message.delete_confirm') }, method: :delete %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%= t('defaults.id') %></th>
          <td><%= @food.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.japanese_notation') %></th>
          <td><%= @food.japanese_notation %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.korean_notation') %></th>
          <td><%= @food.korean_notation %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.onomatopoeia') %></th>
          <td><%= @onomatopoeias.japanese_notation %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.category') %></th>
          <td><%= @food.category.name %></td>
        </tr>
        <tr>
          <th scope="row"><%=  t('defaults.date') %></th>
          <td><%= l @food.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>