<%# content_for(:title, @board.title) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t 'オノマトペ詳細' %></h1>
      <div class="text-right mb-3">
        <%#= link_to t('defaults.edit'), edit_admin_board_path(@board), class: 'btn btn-success' %>
        <%#= link_to t('defaults.delete'), admin_board_path(@board), method: :delete, data: { confirm: t('defaults.message.delete_confirm') }, class: 'btn btn-danger' %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%=Onomatopoeia.human_attribute_name(:id) %></th>
          <td><%= @onomatopoeia.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= "日本語表記" %></th>
          <td><%= @onomatopoeia.japanese_notation %></td>
        </tr>
        <tr>
          <th scope="row"><%= "韓国語表記" %></th>
          <td><%= @onomatopoeia.korean_notation %></td>
        </tr>
        <tr>
          <th scope="row"><%= Onomatopoeia.human_attribute_name(:created_at) %></th>
          <td><%= l @onomatopoeia.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>