<tr>
  <td>
    <%= user.id %>
  </td>
  <td>
    <%= user.name %>
  </td>
  <td>
    <%= user.role %>
  </td>
  <td>
    <%= l user.created_at, format: :long  %>
  </td>
  <td>
    <%= link_to (t 'defaults.detail'), admin_user_path(user), class: "btn btn-info" %>
    <%= link_to (t 'defaults.edit'),  edit_admin_user_path(user), class: "btn btn-success" %>
    <%= link_to (t 'defaults.delete'), admin_user_path(user), class: "btn btn-danger", data: { confirm: t('defaults.message.delete_confirm') }, method: :delete %>
  </td>
</tr>
