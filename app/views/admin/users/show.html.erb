<% content_for(:title, @user.name) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <h1><%= t('.title') %></h1>
      <div class="text-right mb-3">
        <%= link_to (t 'defaults.edit'), edit_admin_user_path(@user), class: "btn btn-success" %>
        <%= link_to (t 'defaults.delete'), admin_user_path(@user), class: "btn btn-danger", data: { confirm: t('defaults.message.delete_confirm') }, method: :delete %>
      </div>
      <table class="table table-bordered bg-white">
        <tr>
          <th scope="row"><%=  t('defaults.id') %></th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.name') %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.role') %></th>
          <td><%= @user.role %></td>
        </tr>
        <tr>
          <th scope="row"><%= t('defaults.date')%></th>
          <td><%= l @user.created_at, format: :long %></td>
        </tr>
      </table>
    </div>
  </div>
</div>