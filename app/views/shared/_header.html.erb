<div class="fixed top-0 w-screen sm:h-20 h-16 z-50 bg-white text-blackpanther border-b-2 border-yellow-200">
  <div class="container h-full flex flex-wrap items-center">
    <div class="flex space-x-2 justify-start">
      <%= link_to image_tag("header.png", class: "h-8 sm:h-12 aspect-auto"), root_path %>
      <span class="self-center text-base sm:text-xl text-blackpanther font-mono whitespace-nowrap">Muksearch</span>
    </div>
    <div class="flex justify-center font-mplus text-sm sm:text-base ml-2 sm:ml-4 sm:py-1 pl-2 sm:pl-4 border-l border-blackpanther">
      <%= link_to about_path, class: "mr-5 hover:text-stone700" do %>
        <p>About</p>
      <% end %>
    </div>
    <div class="absolute sm:top-6 top-4 right-5 ">
      <%= link_to root_path do %>
        <button class="inline-flex items-center font-mplus text-sm sm:text-base text-blackpanther py-1 px-2 sm:px-3"> 
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="sm:w-4 sm:h-4 w-3 h-3">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
          </svg>
          Top
        </button>
      <% end %>
    </div>
  </div>
</div>


